<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/flickr_primary_background</item>
        <item name="colorPrimaryDark">@color/flickr_secondary_background</item>
        <item name="colorAccent">@color/flickr_accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/flickr_background</item>
    </style>
    
    <style name="Theme.Flickr" parent="Theme.Base"/>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="colorControlHighlight">@color/flickr_background</item>
        <item name="android:textColorPrimary">@color/flickr_primary_text</item>
        <item name="android:actionMenuTextColor">@color/flickr_primary_text</item>
        <item name="android:textColorSecondary">@color/flickr_primary_text</item>
        <item name="android:background">@color/flickr_primary_background</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/flickr_primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
